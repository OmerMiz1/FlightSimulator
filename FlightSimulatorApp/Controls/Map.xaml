<UserControl x:Class="FlightSimulatorApp.Controls.Map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:map="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <map:Map x:Name="myMap"
             CredentialsProvider="VsuXtswpxYfnv1OqwmKr~KDTQtrFuRO6tRkFb8XVwwQ~AmANrH8EWU6IrujFhiEBIMo84I5yeceB0jXXklG00byhaenDMsAztU_DX_Moz7tl"
             Margin="5"
             Mode="AerialWithLabels"
             DataContext="vm:MapVM">
        <map:Pushpin x:Name="AirplanePushpin"
                     Template="{StaticResource airplaneTemplate}"
                     Location="32.5,20"
                     Background="Purple"
                     Content="Airplane"
                     FontSize="5" />
        <map:Pushpin Location="0,0" Content="{Binding ElementName=AirplanePushpin, Path=Location.Longitude}"
                     FontSize="10" />
        <map:Pushpin Location="0,20" Content="{Binding ElementName=AirplanePushpin, Path=Location.Latitude}"
                     FontSize="10" />
    </map:Map>
</UserControl>