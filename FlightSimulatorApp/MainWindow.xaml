<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:controls="clr-namespace:FlightSimulatorApp.Controls"
        mc:Ignorable="d" Height="600"
        Title="MainWindow">
    <!--Main Grid-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- #0 Map + Connect/Disconnect -->
            <ColumnDefinition Width="Auto"/>
            <!-- #1 Steers + Joystick -->
        </Grid.ColumnDefinitions>
        <Grid Name="MapGrid" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <controls:ConnectionButtons HorizontalAlignment="Stretch"/>
            <controls:Map x:Name="MyMap" Grid.Row="1"/>
        </Grid>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <controls:CockpitDashboard VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <controls:CockpitControls VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
