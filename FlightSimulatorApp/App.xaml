<Application x:Class="FlightSimulatorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:map="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             xmlns:local="clr-namespace:FlightSimulatorApp"
             Startup="App_Startup">
    <Application.Resources>
         <ResourceDictionary>

             <!-- Dashboard Label Style -->
             <Style x:Key="DashboardLabelStyle" TargetType="{x:Type Label}">
                 <Setter Property="VerticalAlignment" Value="Center" />
                 <Setter Property="HorizontalAlignment" Value="Left" />
                 <Setter Property="FontSize" Value="14" />
             </Style>

             <!-- Dashboard TextBox Style -->
            <Style x:Key="DashboardTextBoxStyle" TargetType="{x:Type TextBox}">
                 <Setter Property="VerticalAlignment" Value="Center" />
                 <Setter Property="HorizontalAlignment" Value="Center" />
                 <Setter Property="FontSize" Value="14" />
                 <Setter Property="Width" Value="70" />
                 <Setter Property="IsEnabled" Value="False" />
                 <Setter Property="Text" Value="N/A" />
             </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
